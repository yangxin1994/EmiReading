<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <com.emi.emireading.widget.view.TitleView
      app:titleText="下载抄表数据"
      android:layout_width="match_parent"
      android:layout_height="@dimen/toolbar_height">

  </com.emi.emireading.widget.view.TitleView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/download_background"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        >

        <TextView
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="抄表员编码"/>

        <EditText
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/etMeterReaderNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="50"
            android:background="@null"
            android:hint="请输入抄表员编码"
            android:padding="5dp"
            android:textSize="14sp"/>

        <include layout="@layout/line_gray_little"/>

        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="12sp"
            android:text="抄表日期"/>

        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="未选择"
            android:textSize="16sp"/>
        <include layout="@layout/line_gray_little"/>

        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="12sp"
            android:text="选择线路"/>

        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/tvReadingLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="未选择"
            android:textSize="16sp"/>
        <include layout="@layout/line_gray_little"/>
        <TextView
            android:layout_marginTop="@dimen/dp_50"
            android:id="@+id/btnDownLoad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_select_bg"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:text="下      载"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>