<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.emi.emireading.widget.view.TitleView
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        app:titleText="专业模式">
    </com.emi.emireading.widget.view.TitleView>

    <com.emi.emireading.widget.view.MenuItemView
        android:id="@+id/mivShowPeopleRecord"
        style="@style/setting_style"
        app:itemType="toggleType"
        app:labelDrawable="@mipmap/debugs"
        app:labelText="是否补录"
        app:onColor="@color/colorPrimary"
        />

    <com.emi.emireading.widget.view.MenuItemView
        android:id="@+id/mivFileEdit"
        style="@style/setting_style"
        app:itemType="toggleType"
        app:labelDrawable="@mipmap/danbiao"
        app:labelText="修改文件"
        app:onColor="@color/colorPrimary"
        />

    <com.emi.emireading.widget.view.MenuItemView
        android:id="@+id/mivChannelDebug"
        style="@style/setting_style"
        app:labelDrawable="@mipmap/tongdaoban"
        app:labelText="通道板调试"
        />

    <com.emi.emireading.widget.view.MenuItemView
        android:id="@+id/mivSingleDebug"
        style="@style/setting_style"
        app:labelDrawable="@mipmap/danbiao"
        app:labelText="单表维护"
        />

    <com.emi.emireading.widget.view.MenuItemView
        android:id="@+id/mivReadingDelay"
        style="@style/setting_style"
        app:labelDrawable="@mipmap/danbiao"
        app:labelText="抄表延时设置"
        />

    <com.emi.emireading.widget.view.MenuItemView
        android:id="@+id/mivExportSetting"
        style="@style/setting_style"
        app:labelDrawable="@mipmap/ic_about"
        app:labelText="导出设置"
        />

    <!--  设置联系方式-->
    <com.emi.emireading.widget.view.MenuItemView
        android:id="@+id/mivSetContact"
        style="@style/setting_style"
        app:itemType="normalType"
        app:labelDrawable="@mipmap/ic_about"
        app:labelText="设置联系方式"
        />

</LinearLayout>